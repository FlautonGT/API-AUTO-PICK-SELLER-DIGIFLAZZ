# =============================================================================
# DIGIFLAZZ PICKER v5.0 - CONFIGURATION
# =============================================================================
# Copy file ini ke .env dan isi dengan nilai yang sesuai
# =============================================================================

# =============================================================================
# AUTHENTICATION (WAJIB)
# =============================================================================
# Copy dari browser DevTools > Network > Headers

XSRF_TOKEN=eyJpdiI6Im1IN2UySFwvR3JlQmhmM....
COOKIE=_ga=GA1.1.975276696.1761842373; remember_web_59ba36addc2b2f9401580f014c7f58ea4e30989d=....

# =============================================================================
# TELEGRAM BOT (WAJIB - untuk konfirmasi kode produk)
# =============================================================================

# Bot Token dari @BotFather
TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz

# Chat ID grup/user (bisa dapat dari @userinfobot)
TELEGRAM_CHAT_ID=-1001234567890

# =============================================================================
# OPENAI API (WAJIB - untuk seller selection)
# =============================================================================

GPT_API_KEY=sk-proj-xxxxxx

# Model untuk Seller Selection
GPT_MODEL_SELLER=gpt-4.1-mini

# =============================================================================
# MODE
# =============================================================================
# ALL = proses semua produk
# UNSET = hanya proses produk yang belum ada kode
# DISTURBANCE = hanya proses produk yang mengalami gangguan

MODE=ALL

# =============================================================================
# SELLER FILTER
# =============================================================================

# Minimum rating seller (0 = belum ada rating, tetap OK)
MIN_RATING=3.0

# Wajib stok unlimited
REQUIRE_UNLIMITED_STOCK=true

# Wajib support multi transaksi
REQUIRE_MULTI=true

# Wajib status aktif
REQUIRE_STATUS_ACTIVE=true

# Wajib faktur pajak (biasanya false karena lebih murah)
REQUIRE_FP=false

# Filter deskripsi bermasalah (testing, trial, dll)
ENABLE_DESCRIPTION_BLACKLIST=true

# Filter rating rendah sebelum AI
ENABLE_RATING_PREFILTER=true

# Log seller yang di-filter (untuk debugging)
LOG_FILTERED_SELLERS=false

# =============================================================================
# CATEGORY FILTER
# =============================================================================

# Categories yang di-SKIP (pisahkan dengan koma)
SKIP_CATEGORIES=Malaysia TOPUP,China TOPUP,Vietnam Topup,Thailand TOPUP,Singapore TOPUP,Philippines TOPUP

# Categories yang di-PROSES (kosongkan untuk semua)
CATEGORIES=

# =============================================================================
# PRODUCT CODE
# =============================================================================

# Generate kode produk via Telegram (manual confirmation)
SET_PRODUCT_CODE=true

# Skip jika kode sudah lengkap
SKIP_IF_CODES_COMPLETE=true

# Maksimal panjang kode
CODE_MAX_LENGTH=15

# Suffix untuk backup seller
BACKUP1_SUFFIX=B1
BACKUP2_SUFFIX=B2

# =============================================================================
# TIMING (milidetik)
# =============================================================================

DELAY_BETWEEN_PRODUCTS=100
DELAY_BETWEEN_SAVES=250
DELAY_BETWEEN_CATEGORIES=1000
DELAY_ON_ERROR=2000

# =============================================================================
# RETRY
# =============================================================================

MAX_RETRIES=15
RETRY_DELAY=1500

# =============================================================================
# LOGGING
# =============================================================================

VERBOSE=true
LOG_TO_FILE=true
LOG_TO_CONSOLE=true
LOG_DIR=./logs
REPORT_DIR=./reports

# =============================================================================
# AI SETTINGS
# =============================================================================

# Maksimal kandidat seller ke AI
MAX_AI_CANDIDATES=10

# Minimum panjang deskripsi
MIN_DESCRIPTION_LENGTH=15

# Blacklist keywords (pisahkan dengan koma)
DESCRIPTION_BLACKLIST=testing,test,percobaan,trial,demo,maintenance,pulsa transfer,paket transfer

# =============================================================================
# RATE LIMIT
# =============================================================================

# Sleep saat kena rate limit (ms)
RATE_LIMIT_SLEEP_DURATION=15000
